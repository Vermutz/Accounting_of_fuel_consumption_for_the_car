<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ACOREbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Change_Expenses_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ACOREbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACOREeditText5" />

    <Button
        android:id="@+id/ACOREbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Delet_Expenses_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ACOREbutton2"
        app:layout_constraintTop_toBottomOf="@+id/ACOREeditText5" />

    <Button
        android:id="@+id/ACOREButtonData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/Data"
        app:layout_constraintBottom_toTopOf="@+id/ACOREeditText3"
        app:layout_constraintEnd_toStartOf="@+id/checkBox2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Petrol"
        app:layout_constraintBottom_toTopOf="@+id/ACOREeditText3"
        app:layout_constraintEnd_toStartOf="@+id/ACOREeditText2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ACOREButtonData"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ACOREeditText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Price"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/ACOREeditText5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ACOREeditText3"
        app:layout_constraintTop_toBottomOf="@+id/ACOREeditText2" />

    <EditText
        android:id="@+id/ACOREeditText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Quantity"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/ACOREeditText5"
        app:layout_constraintEnd_toStartOf="@+id/ACOREeditText4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACOREButtonData" />

    <EditText
        android:id="@+id/ACOREeditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Cost_Type"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ACOREeditText4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ACOREeditText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Cost"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/ACOREbutton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ACOREeditText4" />

</android.support.constraint.ConstraintLayout>